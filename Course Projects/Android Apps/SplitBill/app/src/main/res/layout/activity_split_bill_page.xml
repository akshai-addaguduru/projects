<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/titleTextView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplitBillPage">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="@dimen/txtPadding_5dp"
        android:paddingTop="@dimen/txtPadding_10dp"
        android:paddingRight="@dimen/txtPadding_5dp"
        android:paddingBottom="@dimen/txtPadding_10dp"
        android:text="@string/txtTitle2"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/titleSize" />

    <EditText
        android:id="@+id/txtBill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/txtBill"
        android:inputType="number"
        android:paddingLeft="@dimen/txtPadding_5dp"
        android:paddingTop="@dimen/txtPadding_10dp"
        android:paddingRight="@dimen/txtPadding_5dp"
        android:paddingBottom="@dimen/txtPadding_10dp"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="@dimen/hintSize"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/txtCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="@string/txtCount"
        android:inputType="number"
        android:paddingLeft="@dimen/txtPadding_5dp"
        android:paddingTop="@dimen/txtPadding_10dp"
        android:paddingRight="@dimen/txtPadding_5dp"
        android:paddingBottom="@dimen/txtPadding_10dp"
        android:textColor="@android:color/holo_blue_bright"
        android:textSize="@dimen/hintSize"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/txtTip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/txtTip"
        android:paddingLeft="@dimen/txtPadding_5dp"
        android:paddingTop="@dimen/txtPadding_10dp"
        android:paddingRight="@dimen/txtPadding_5dp"
        android:paddingBottom="@dimen/txtPadding_10dp"
        android:prompt="@string/prompt" />

    <Button
        android:id="@+id/btnCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingLeft="@dimen/txtPadding_5dp"
        android:paddingTop="@dimen/txtPadding_10dp"
        android:paddingRight="@dimen/txtPadding_5dp"
        android:paddingBottom="@dimen/txtPadding_10dp"
        android:text="@string/txtCost"
        android:textColor="@android:color/holo_green_light"
        android:textSize="@dimen/btnSize"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/txtPadding_5dp"
        android:paddingTop="@dimen/txtPadding_10dp"
        android:paddingRight="@dimen/txtPadding_5dp"
        android:paddingBottom="@dimen/txtPadding_10dp"
        android:textSize="@dimen/hintSize" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="361dp"
        app:srcCompat="@drawable/splitcost" />

</LinearLayout>